<h1>Event Details</h1>

<div>

  <div>
    <h3>{{showEventDetails.name}} </h3>

    {{!-- {{Dynamic images}} --}}
    {{#ifvalue showEventDetails.category value='Music'}}
      {{!-- {{En cada uno de estos tenéis que llamar a la imagen que queráis de la carpeta public/images <img class="event-img" src="images/music.png"//>}} --}}
      <p>Music image 📻</p>
    {{/ifvalue}}
    {{#ifvalue showEventDetails.category value='Sport'}}
      <p>Sport image 🏀</p>
    {{/ifvalue}}
    {{#ifvalue showEventDetails.category value='Cinema'}}
      <p>Cinema image 🎼</p>
    {{/ifvalue}}
    {{#ifvalue showEventDetails.category value='Outdoors'}}
      <p>Outdoors image 🌼</p>
    {{/ifvalue}}
    {{#ifvalue showEventDetails.category value='Learning'}}
      <p>Learning image 📖</p>
    {{/ifvalue}}
    {{!-- {{End of dynamic images}} --}}

    <p>Location: {{showEventDetails.location}}</p>
    <p>Date: {{showEventDetails.date}} </p>
    <p>Price: {{showEventDetails.price}} $</p>
    <p>Category: {{showEventDetails.category}} </p>
    <p>Description: {{showEventDetails.description}} </p>
